    "version": "0.2.0",
    "configurations": [
        {
            "name": "test_args",
            "type": "python",
            "request": "launch",
            "program": "debiantospdx/__main__.py",
            "cwd": "${workspaceFolder}", // デバッグでもテストでもここを参照する
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                // 適宜コメントアウトすることでデフォルト値を確認できる
                "/home/tk-tanab/taketo/syuron/git/debiantospdx/SPDX/temp1",
                "-p",
                "Taketo Tanabe",
                "-o",
                "Higo Lab",
                "${input:inputString1}",
                "${input:inputString2}",
                "${input:selectString1}",
                "${input:inputString0}" //all のときはコメントアウト
            ]
        }
    ],
    "inputs": [
        {
            "id": "selectString1",
            "type": "pickString",
            "options": [
                "--package",
                "--all",
                "--search",
            ],
            "default": "migrate",
            "description": "引数を選択してください"
        },
        {
            "id": "inputString0",
            "type": "promptString",
            "description": "package name",
        },
        {
            "id": "inputString1",
            "type": "promptString",
            "description": "-m mode",
        },
        {
            "id": "inputString2",
            "type": "promptString",
            "description": "-d dep_mode",
        },
    ]
